{
  "name": "@youcraft/recall-structured",
  "version": "0.2.0-alpha.0",
  "description": "Schema-based structured memory for AI applications. Define Zod schemas, let the LLM handle intent detection, data extraction, and CRUD operations with precise SQL queries.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "dependencies": {
    "zod": "^3.23.0"
  },
  "peerDependencies": {
    "ai": "^6.0.0",
    "better-sqlite3": "^11.0.0",
    "openai": "^4.0.0"
  },
  "devDependencies": {
    "@types/better-sqlite3": "^7.6.11",
    "@types/node": "^20.0.0",
    "ai": "^6.0.0-beta.137",
    "better-sqlite3": "^11.0.0",
    "openai": "^4.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "recall",
    "ai",
    "memory",
    "llm",
    "structured-data",
    "schema",
    "zod",
    "sqlite",
    "sql",
    "crud",
    "intent-detection",
    "data-extraction",
    "typescript"
  ],
  "license": "MIT",
  "homepage": "https://github.com/aneequrrehman/recall#readme",
  "bugs": {
    "url": "https://github.com/aneequrrehman/recall/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aneequrrehman/recall.git",
    "directory": "packages/recall-structured"
  }
}
