{
  "name": "@youcraft/recall-adapter-postgresql",
  "version": "0.1.0",
  "description": "PostgreSQL database adapter for Recall with native pgvector support. Production-ready AI memory storage with vector similarity search.",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest",
    "test:run": "vitest run",
    "typecheck": "tsc --noEmit"
  },
  "peerDependencies": {
    "@youcraft/recall": "workspace:*",
    "pg": "^8.0.0"
  },
  "optionalDependencies": {
    "pgvector": "^0.2.0"
  },
  "devDependencies": {
    "@types/node": "^20.0.0",
    "@types/pg": "^8.11.0",
    "@youcraft/recall": "workspace:*",
    "pg": "^8.0.0",
    "pgvector": "^0.2.0",
    "tsup": "^8.0.0",
    "typescript": "^5.4.0",
    "vitest": "^2.0.0"
  },
  "keywords": [
    "recall",
    "ai",
    "memory",
    "llm",
    "postgresql",
    "postgres",
    "pgvector",
    "vector-database",
    "database",
    "adapter",
    "embeddings",
    "semantic-search",
    "typescript"
  ],
  "license": "MIT",
  "homepage": "https://github.com/aneequrrehman/recall#readme",
  "bugs": {
    "url": "https://github.com/aneequrrehman/recall/issues"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/aneequrrehman/recall.git",
    "directory": "packages/adapter-postgresql"
  }
}
